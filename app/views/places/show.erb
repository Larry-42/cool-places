<h3><%= @place.name %></h3>
<h3><i><%= @place.location %></i></h3>
<p><%= @place.content %></p>
<% if @is_logged_in %>
  <p>Add a comment:</p>
  <form action = "<%= "/places/#{@place.id}/comment" %>" method = "post">
    <textarea name="comment" rows="10" cols="60"></textarea><br>
    <input type="submit" name="submit" value="Create comment">
  </form>
<% end %>
