<h3>Cool places to visit:</h3>
<ul>
  <% @places.each do |place| %>
    <li>
    <a href = "<%= "/places/#{place.id}" %>"><%= place.name %></a> - <%= place.location %>
    <% if @user && place.user_id == @user.id %>
      <a href = "<%= "/places/#{place.id}/edit" %>"> Edit </a> | <a href = "<%= "/places/#{place.id}/delete" %>">Delete</a>
    <% end %>
    </li>
  <% end %>
</ul>
